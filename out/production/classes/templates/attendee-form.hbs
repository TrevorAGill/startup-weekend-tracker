{{#partial "content"}}

    {{#if editItem}}

        <div class="well">
            <h1>Edit Item</h1>
            <form action="/item/{{editItem.id}}/edit" method="post">
                <div class ="form-group">
                    <label for="itemName">Name</label>
                    <input id="itemName" name="itemName" type="text" placeholder="{{editItem.itemName}}">
                </div>
                <div class ="form-group">
                    <label for="itemPrice">Price</label>
                    <input id="itemPrice" name="itemPrice" type="text" value={{editItem.itemPrice}}>
                </div>
                <div class="form-group">
                    <label for="itemWeight">Weight</label>
                    <input id="itemWeight" name="itemWeight" type="text"  value={{editItem.itemWeight}}>
                </div>
                <div class ="form-group">
                    <label for="purchased">Item Purchased?</label>
                    <select class="form-control" id="purchased" value={{editItem.purchased}}>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class ="form-group">
                    <label for="packed">Item Packed?</label>
                    <select class="form-control" id="packed" value={{editItem.packed}}>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Go!</button>
            </form>
        </div>

    {{else}}
        <div class="well">
            <h1>Add an Attendee</h1>
            <form action="/attendee/new" method="post">
                <div class ="form-group">
                    <label for="attendeeName">Name</label>
                    <input id="attendeeName" name="attendeeName" type="text">
                </div>
                <div class ="form-group">
                    <label for="attendeeCompany">Company</label>
                    <input id="attendeeCompany" name="attendeeCompany" type="text">
                </div>
                <div class ="form-group">
                    <label for="attendeeEmail">Email</label>
                    <input id="attendeeEmail" name="attendeeEmail" type="text">
                </div>
                <div class ="form-group">
                    <label for="attendeeAge">Age</label>
                    <input id="attendeeAge" name="attendeeAge" type="text">
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}