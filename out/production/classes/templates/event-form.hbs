{{#partial "content"}}

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/">Home</a></li>
        <li role="presentation"><a href="/events">Event Listing</a></li>
        <li role="presentation" class="active"><a href="/event/new">Add New Event</a></li>
    </ul>
    {{#if editEvent}}

        <div class="well">
            <h1>Edit Event: {{editEvent.name}}</h1>
            <form action="/event/{{editEvent.id}}/edit" method="post">
                <div class ="form-group">
                    <label for="eventName">Name</label>
                    <input id="eventName" name="eventName" type="text" value="{{editEvent.name}}" required>
                </div>
                <div class ="form-group">
                    <label for="eventDescription">Description</label>
                    <input id="eventDescription" name="eventDescription" type="text" value="{{editEvent.description}}" required>
                </div>
                <button type="submit" class="btn btn-success">Go!</button>
            </form>
        </div>

    {{else}}
        <div class="well">
            <h1>Add an Event</h1>
            <form action="/event/new" method="post">
                <div class ="form-group">
                    <label for="eventName">Name</label>
                    <input id="eventName" name="eventName" type="text">
                </div>
                <div class ="form-group">
                    <label for="eventDescription">Description</label>
                    <input id="eventDescription" name="eventDescription" type="text">
                </div>
                <button type="submit" class="btn btn-success">Submit your event</button>
            </form>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}