{{#partial "content"}}


    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="/">Home</a></li>
        <li role="presentation"><a href="/event/new">Add New Event</a></li>
    </ul>
    <div class="container">
        <!--begin main template-->
        <div class="page-header">
            <h1>All Events</h1>
        </div>
        <div class="well">
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
            {{#if events}}
                <table>
                    <tr>
                        <th>Event Name</th>
                        <th>Description</th>
                    </tr>
                {{#each events}}
                    <tr>
                        <td> <a href="/event/{{ id }}">{{ name }}</a> </td>
                        <td>{{ description }}</td>
                    </tr>

                {{/each}}
                </table>

            {{else}}
                <p>There are no events at this time.</p>
            {{/if}}
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}