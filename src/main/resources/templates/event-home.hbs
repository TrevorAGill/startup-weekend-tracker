{{#partial "content"}}

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/">Home</a></li>
        <li role="presentation" class="active"><a href="/events">Event Listing</a></li>
        <li role="presentation"><a href="/event/new">Add New Event</a></li>
    </ul>
    <div class="container">
        <!--begin main template-->
        <div class="page-header">
            <h1>All Events</h1>
        </div>
        <div class="well">
            {{#if events}}
                <table>
                    <tr>
                        <th>Edit/Delete</th>
                        <th>Event Name</th>
                        <th>Description</th>
                        <th>Registration Count</th>
                    </tr>
                {{#each events}}
                    <tr>
                        <td width="40px"><a href="/event/{{id}}/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>  <a href="/event/{{id}}/delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                        <td> <a class="blacklink" href="/event/{{ id }}">{{ name }}</a> </td>
                        <td>{{ description }}</td>
                        <td>{{ attendeeCount }}</td>
                    </tr>
                {{/each}}
                </table>
            {{else}}
                <p>There are no events at this time.</p>
            {{/if}}
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}